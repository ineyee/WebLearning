/* video-detail/component/related/related.wxss */
.related {
  padding: 20rpx;
}

.related .title {
  font-size: 44rpx;
  font-weight: 500;
}

.related .list .item {
  height: 120rpx;
  margin-bottom: 20rpx;

  display: flex;
}

.related .list .item .cover {
  width: 240rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.related .list .item .text {
  padding-left: 20rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.related .list .item .text .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.related .list .item .text .countTime {
  color: #666;
}