/* music-play/page/music-play.wxss */
.music-play-page {
  position: relative;
}

.music-play-page .bg-image,
.music-play-page .bg-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.music-play-page .bg-mask {
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20rpx);
}