/* 04_小程序组件间的通信/04_传递组件：插槽元素 slot/component/app-bar.wxss */
.app-bar {
  height: 44px;

	display: flex;
}

.title {
	flex: 1;

  background-color: peachpuff;

  display: flex;
  justify-content: center;
  align-items: center;
}

.leading {
  width: 80px;

  background-color: plum;

  display: flex;
  justify-content: start;
  align-items: center;
}

.action {
  width: 80px;

  background-color: powderblue;

  display: flex;
  justify-content: end;
  align-items: center;
}